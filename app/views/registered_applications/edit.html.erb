<div class='container-fluid'>
<div class='row'>
    <div class='col-md-8'>
        <h1>
            Edit this application:
        </h1>
        <div class='col-md-8'>
            <%= form_for @reg_app do |f| %>
            <div class='form-group'>
                <%= f.label :name %>
                <%= f.text_field :name, class:'form-control', placeholder: @reg_app.name %>
            </div>
            <div class='form-group'>
                <%= f.label :url %>
                <%= f.text_field :url, class: 'form-control', placeholder: @reg_app.url %>
            </div>
            <div class='form-group'>
            <div class='btn-group' role='group'>
                <%= f.submit "Save", class:'btn btn-success'%>
                <%= link_to "Cancel", registered_application_path(@reg_app.id), class:'btn btn-warning'%>
            </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
</div>
