<!DOCTYPE html>
<html>
    <head>
        <%= render 'layouts/head_tag' %>
    </head>
    <body>
        <%= render 'layouts/header' %>

        <div class="container-fluid">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        </div>

        <div class="container-fluid">
            <%= yield %>
        </div>

        <%= render 'layouts/footer' %>
        <%= debug(params) if Rails.env.development? %>
    </body>
</html>
