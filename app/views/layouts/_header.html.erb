<body>
    <div class="container-fluid">
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <div class="navbar-brand">
                    <%= link_to "BlocMetrics", root_path, :class => 'navbar-nav' %>
                </div>
            </div>
            <ul class="nav navbar-nav pull-right">
                <% if user_signed_in? %>
                <li class='navbar-centered'><strong>Signed in as:</strong></li>
                <li><%= link_to current_user.email, root_path, :class => 'navbar-link' %></li>

                <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>

                <li>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
            <% else %>
                <li>
                    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %>
                </li>
                <li>
                    <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
                </li>

                <% end %>
            </div>
        </div>
    </body>
